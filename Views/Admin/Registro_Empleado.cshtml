@{
    ViewData["Title"] = "Registro Empleado";
}

@section estilo{
    <link rel="stylesheet" href="~/css/registro_empleado.css" asp-append-version="true" />
}

@section links_extras{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Admin" asp-action="Registro_Empleado">Registro Empleados</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Index">Seccion Cliente</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Empleado" asp-action="Index">Seccion Empleado</a>
    </li>
    <li class="nav-item">
        <a class="active text-white fw-bold nav-link btn btn-danger" asp-controller="Home" asp-action="Cerrar_Sesion">Cerrar Sesion</a>
    </li>
}

<div class="container-fluid">
    @if (ViewBag.error != null)
    {
        <div class="row bg-white bg-opacity-50 rounded-2 mt-3 p-2 justify-content-center text-center align-items-center">
            <p class="col-12 texto_alerta h4 m-0 fw-bolder text-center">@ViewBag.error</p>
        </div>
    }
    <h1 class="text-center text-white py-4">Registro Empleados </h1>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-8 col-md-10 col-12 d-flex mb-4 justify-content-evenly">
            <a class="btn btn-success fw-bold text-white border-2 border-dark me-4 p-2" asp-controller="Admin" asp-action="Agregar_Empleado">Agregar Empleado</a>
            <form asp-controller="Admin" asp-action="Modificar_Empleado" class="input-group w-50">
                <input name="id_usuario" type="text" class="form-control" placeholder="Cedula" aria-label="Input para poner la cedula de un empleado">
                <button name="accion" value="Actualizar" class="btn btn-primary fw-bold">Editar</button>
                <button name="accion" value="Eliminar" class="btn btn-danger fw-bold" >Eliminar</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-12 p-0 table-responsive">
            <table class="tabla-personalizada m-0">
                <thead>
                    <tr>
                        <th scope="col">Cedula</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Dirección</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.listaUsuarios.Count == 0)
                    {
                        <tr>
                            <th colspan="2" scope="row">Sin Datos</th>
                        </tr>
                    }
                    else
                    {
                        foreach (Usuario usuario in ViewBag.listaUsuarios)
                        {
                            <tr>
                                <th scope="row">@usuario.cedula</th>
                                <td>@usuario.nombres </td>
                                <td>@usuario.apellidos </td>
                                <td>@usuario.telefono </td>
                                <td>@usuario.correo </td>
                                <td>@usuario.Rol.nombre_rol </td>
                                <td>@usuario.direccion </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>