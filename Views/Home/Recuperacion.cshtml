@{
    ViewData["Title"] = "Inicio de Sesion";
}

@section estilo{
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

@section links_extras{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Registro">Registro</a>
    </li>
}

<div class="container">
    @if (ViewBag.error != null)
    {
        <div class="alert alert-danger alert-dismissible fade text-center show fw-bold mt-3 h4" role="alert">
            @ViewBag.error
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (ViewBag.huboEnvio != null)
    {
        <div class="alert alert-success alert-dismissible fade text-center show fw-bold mt-3 h4" role="alert">
            El codigo de verificación fue enviado a su correo
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="row d-flex justify-content-center mt-3">
        <h1 class="col-10 text-center text-white">Recuperación de Contraseña</h1>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="row d-flex justify-content-center">
                <form asp-action="Envio_Codigo" asp-controller="Home" class="col-12">
                    <div class="mt-3 px-4 d-flex position-relative flex-wrap justify-content-center bg-transparent rounded-1 box-shadow">
                        <div class="form-floating mb-3 w-100">
                            <input name="correo" type="email" class="form-control input-bg-custom" id="emailInput" placeholder="Password" autocomplete="nope">
                            <label class="form-label input-bg-custom fs-6 d-flex align-items-center" for="emailInput">
                                <i class="bi bi-envelope-fill me-2" style="font-size: 1.2rem;"></i>
                                Email
                            </label>
                        </div>
                    </div>
                    <div class="text-center text-white w-100">
                        <button class="btn btn-light w-50 p-2 fs-5 btn-login mt-2 mb-5">Solicitar Codigo</button>
                    </div>
                </form>
                @if (ViewBag.huboEnvio != null)
                {
                    string correo = ViewBag.correo;

                    <form asp-action="Confirmar_Codigo" asp-route-correo="@correo" asp-controller="Home" class="col-12">
                        <div class="mt-3 px-4 d-flex position-relative flex-wrap justify-content-center bg-transparent rounded-1 box-shadow">
                            <div class="form-floating mb-3 w-100">
                                <input name="codigo" type="number" class="form-control input-bg-custom" id="emailInput" placeholder="Password" autocomplete="nope">
                                <label class="form-label input-bg-custom fs-5 d-flex align-items-center" for="emailInput">
                                    <i class="bi bi-file-lock2 me-2" style="font-size: 1.2rem;"></i>
                                    Codigo
                                </label>
                            </div>
                        </div>
                        <div class="text-center text-white w-100">
                            <button class="btn btn-light w-50 p-2 fs-5 btn-login mt-2 mb-5">Validar</button>
                        </div>
                    </form>
                }
                @if (ViewBag.confirmacion != null)
                {
                    <form asp-action="Cambiar_Contraseña" asp-route-correo="@ViewBag.correo" asp-controller="Home" class="col-12">
                        <div class="mt-3 px-4 d-flex position-relative flex-wrap justify-content-center bg-transparent rounded-1 box-shadow">
                            <div class="form-floating mb-3 w-100">
                                <input name="contrasena" type="password" class="form-control input-bg-custom" id="emailInput" placeholder="Password" autocomplete="nope">
                                <label class="form-label input-bg-custom fs-5 d-flex align-items-center" for="emailInput">
                                    <i class="bi bi-file-lock2 me-2" style="font-size: 1.2rem;"></i>
                                    Nueva Contraseña
                                </label>
                            </div>
                        </div>
                        <div class="text-center text-white w-100">
                            <button class="btn btn-light w-50 p-2 fs-5 btn-login mt-2 mb-5">Cambiar Contraseña</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>


